
/* MOBILE GLOBAL STYLE */
.display-table { display: table !important;width: 100%; }
.display-table .display-cell { display: table-cell !important;float: none !important;vertical-align: top; }
.display-table.top .display-cell { vertical-align: top; }
.display-table.middle .display-cell { vertical-align: middle; }
.display-table.bottom .display-cell { vertical-align: bottom; }


/* MOBILE HEADER */
#site-header { position: fixed;top: 0;left: 0;background: red;z-index: 999; }
	#site-header .lang-wrapper { text-align: left;padding-left: 15px; }
	#site-header .lang-wrapper a,
	#site-header .lang-wrapper a:focus,
	#site-header .lang-wrapper a:visited,
	#site-header .lang-wrapper span { font-family:'FuturaStd-Bold';font-size: 36px;font-size: 3.5vw;font-size: 3.5vmin;font-weight: normal;color: #333;line-height: normal; }
	#site-header .lang-wrapper a.active { color: #FFF; }
	
	#site-header .header-logo { text-align: center;padding: 10px 0; }
	#site-header .header-logo img { max-width: 70%; }
	
	#site-header .header-menu { text-align: right;padding-right: 15px; }
	#site-header .header-menu span.glyphicon { font-size: 36px;font-size: 8vw;font-size: 8vmin;font-weight: normal;color: #333;line-height: normal; }

/* MMENU CUSTOM STYLE */
#mm-blocker { -webkit-transition: background 1s ease;-moz-transition: background 1s ease;transition: background 1s ease; }
	html.mm-opening .mm-menu.mm-front { background: #444343 !important;width: 100% !important;min-width: 0 !important;max-width: 100% !important; }
	.mm-panel { padding: 0 !important; }
	.mm-panel:before,
	.mm-panel:after { content: none !important;display: none !important; }
	
/* FOOTER */
.footer-socmed a { width: 20%;max-width: 90px;padding: 9px 10px;border: 0 !important; }	
.footer-socmed a img { width: 100%; }	
